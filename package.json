{
  "name": "nt-gulp-bundler",
  "scripts": {
    "build": "gulp build --minify",
    "start:minify": "gulp watch --minify",
    "start": "gulp watch",
    "clean": "gulp clean"
  },
  "bin": {
    "ntgb": "./cli.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@notiv/postcss-property-lookup": "^2.0.4",
    "autoprefixer": "^9.5.1",
    "browser-sync": "^2.26.3",
    "cross-spawn": "^6.0.5",
    "css-mqpacker": "^7.0.0",
    "gulp": "^3.9.1",
    "gulp-error-notifier": "^1.1.0",
    "gulp-if": "^2.0.2",
    "gulp-imagemin": "^5.0.3",
    "gulp-include": "^2.4.1",
    "gulp-livereload": "^4.0.1",
    "gulp-load-plugins": "^1.5.0",
    "gulp-mustache": "^4.1.1",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^1.4.0",
    "gulp-sass": "^4.0.2",
    "gulp-svg-sprite": "^1.5.0",
    "gulp-watch": "^5.0.1",
    "imagemin-giflossy": "^5.1.10",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-pngquant": "^7.0.0",
    "imagemin-zopfli": "^6.0.0",
    "minimist": "^1.2.0",
    "nanoid": "^2.0.1",
    "postcss-clean": "^1.1.0",
    "postcss-easy-import": "^3.0.0",
    "postcss-fluid": "^1.0.0",
    "postcss-inline-media": "^1.3.0",
    "postcss-media-minmax": "^4.0.0",
    "postcss-scss": "^2.0.0",
    "postcss-selector-matches": "^4.0.0",
    "postcss-selector-not": "^4.0.0",
    "postcss-simple-vars": "^5.0.1",
    "postcss-transition": "^1.0.0",
    "rmfr": "^2.0.0",
    "rollup": "^1.11.3",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-node-resolve": "^4.2.3",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^4.0.4",
    "sort-css-media-queries": "^1.4.3"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 150,
    "bracketSpacing": true,
    "arrowParens": "always"
  },
  "stylelint": {
    "plugins": [
      "stylelint-scss"
    ],
    "rules": {
      "indentation": 2,
      "string-quotes": "single",
      "selector-max-id": 0,
      "selector-list-comma-newline-after": "always",
      "rule-empty-line-before": [
        "always",
        {
          "ignore": [
            "after-comment"
          ],
          "except": [
            "after-single-line-comment",
            "first-nested"
          ]
        }
      ],
      "comment-empty-line-before": [
        "always",
        {
          "except": [
            "first-nested"
          ]
        }
      ],
      "block-opening-brace-space-before": "always",
      "declaration-colon-space-after": "always-single-line",
      "declaration-colon-space-before": "never",
      "declaration-block-single-line-max-declarations": 1,
      "declaration-property-value-blacklist": {
        "/^border/": [
          "none"
        ]
      },
      "at-rule-empty-line-before": [
        "always",
        {
          "ignore": [
            "after-comment",
            "blockless-after-same-name-blockless"
          ],
          "except": [
            "first-nested"
          ]
        }
      ],
      "max-nesting-depth": 3,
      "scss/dollar-variable-pattern": "^_?[a-z]+[\\w-]*$",
      "scss/at-extend-no-missing-placeholder": true,
      "declaration-block-no-duplicate-properties": true
    },
    "sort-css-media-queries": "^1.4.3"
  }
}
